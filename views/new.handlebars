<div class="container">
  <form action="/restaurants" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" id="name" name="name" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳名稱（英）</label>
      <input type="text" class="form-control" id="name_en" name="name_en" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別</label>
      <select class="form-select form-select-lg mb-3" name="category" id="category" aria-label="Default select example">
        <option selected>請選擇</option>
        <option value="中東料理">中東料理</option>
        <option value="日本料理">日本料理</option>
        <option value="義式餐廳">義式餐廳</option>
        <option value="義式餐廳">義式餐廳</option>
        <option value="美式">美式</option>
        <option value="酒吧">酒吧</option>
        <option value="咖啡">咖啡</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結</label>
      <input type="text" class="form-control" id="image" name="image" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" name="location" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="text" class="form-control" id="phone" name="phone" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">google地圖連結</label>
      <input type="text" class="form-control" id="google_map" name="google_map" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分</label>
      <input type="text" class="form-control" id="rating" name="rating" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">描述</label>
      <input type="text" class="form-control" id="description" name="description" aria-describedby="">
    </div>
    <button type="submit" class="btn btn-primary">新增</button>
  </form>
</div>