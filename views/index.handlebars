<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
        <form action="/search">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
        <div class="input-group mb-2 mb-sm-0 mr-sm-2">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button"/>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>

      <div class="input-group">
  <select class="form-control" id="sort" name="sort">
    <option>A > Z</option>
    <option>Z > A</option>
    <option>類別</option>
    <option>地區</option>
  </select>
</div>
</div>



      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
 <div class="container mt-5 px-md-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-12 col-sm-6 col-md-4">
        
        
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
        
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
        
              <span class="badge alert-success badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a class="btn btn-success" href="./restaurants/{{this._id}}/edit">Edit</a>
              <a class="btn btn-secondary" href="./restaurants/{{this._id}}">Details</a>
              <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn btn-warning" type="submit">Delete</button>
              </form>

            </div>



            </div>

          </div>
        </a>
        



      </div>
      {{/each}}
    </div>
  </div>
</div>